<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.older.SettingHomeLocationActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_padding"
        android:alpha="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/item_padding"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_home_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_padding_small"
                android:hint="@string/action_home_location_desc"
                android:imeOptions="actionSearch"
                app:met_textColorHint="@color/grey_500"
                app:met_underlineColor="@color/grey_500"
                app:met_primaryColor="@color/colorAccent"
                app:met_floatingLabelText="@string/action_home_location_desc"
                app:met_floatingLabel="highlight"
                app:met_clearButton="true" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_save"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
