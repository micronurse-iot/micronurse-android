<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.older.SettingHomeLocationActivity">

    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_info_outline_48dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/large_text_size"
        android:text="@string/no_data"/>

    <FrameLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/location_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_padding"
                android:layout_below="@+id/older_location_area"
                android:alpha="0.9"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/item_padding"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/item_padding"
                        android:tint="@color/indigo_500"
                        app:srcCompat="@drawable/ic_home_32dp" />
                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_home"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:hint="@string/city_name"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/edit_home_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/edit_city"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black"
                        android:hint="@string/address_detail"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_gravity="center_vertical"/>
                    <ImageButton
                        android:id="@+id/btn_search_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/edit_home_location"
                        android:layout_centerVertical="true"
                        android:tint="@color/blue_500"
                        app:srcCompat="@drawable/ic_add"
                        android:textSize="@dimen/normal_text_size"
                        android:layout_gravity="center_vertical"
                        style="@style/AppTheme.ImageButton"/>

                    <ImageButton
                        android:id="@+id/btn_save_home_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:tint="@color/blue_500"
                        app:srcCompat="@drawable/ic_settings"
                        style="@style/AppTheme.ImageButton" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:srcCompat="@drawable/ic_fullscreen"
                android:tint="@android:color/white"/>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
