<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@mipmap/nav_side_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_portrait"
        android:layout_width="@dimen/nav_header_portrait_size"
        android:layout_height="@dimen/nav_header_portrait_size"
        android:src="@android:drawable/sym_def_app_icon"
        app:civ_border_width="1dp"
        app:civ_fill_color="#eeeeee"
        app:civ_border_color="#ffffff"
        android:layout_above="@+id/nav_header_nickname"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/nav_header_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_header_phone_num"
        android:layout_alignParentLeft="true"
        android:text="Android Studio"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="8"
        android:shadowRadius="1"
        android:singleLine="true"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/nav_header_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Studio"
        android:textSize="@dimen/small_text_size"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_older_portrait"
        android:layout_width="@dimen/nav_header_small_portrait_size"
        android:layout_height="@dimen/nav_header_small_portrait_size"
        android:src="@android:drawable/sym_def_app_icon"
        app:civ_border_width="1dp"
        app:civ_fill_color="#eeeeee"
        app:civ_border_color="#ffffff"
        android:layout_alignTop="@+id/nav_header_portrait"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/nav_header_older_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold"
        android:layout_below="@+id/nav_header_older_portrait"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
