<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_friend_moment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.micronurse.ui.activity.older.PostFriendMomentActivity">

    <ScrollView android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_padding"
            android:layout_toRightOf="@+id/timeline_divider"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_padding">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_moment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_say_something"
                    app:met_textColorHint="@color/grey_500"
                    app:met_underlineColor="@color/grey_500"
                    app:met_primaryColor="@color/colorAccent"
                    app:met_clearButton="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_post_moment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:srcCompat="@drawable/ic_done"
        android:tint="@android:color/white"/>

</RelativeLayout>
