<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.micronurse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="MicroNurse.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <meta-data
            android:name="AA_MODELS"
            android:value="org.micronurse.database.model.LoginUserRecord,                            org.micronurse.database.model.Guardianship" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="org.micronurse.database.serializer.BitmapSerializer" />
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="EROcxOxeLvnewEAAR5hTIZpTBDWlCteD" />

        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activity.ResetPasswordActivity"
            android:label="@string/action_reset_password"
            android:parentActivityName=".ui.activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.micronurse.ui.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="@string/action_new_user"
            android:parentActivityName=".ui.activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.micronurse.ui.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.older.SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".ui.activity.guardian.SettingsActivity"
            android:label="@string/action_settings" />
        <activity android:name=".ui.activity.older.SettingHomeLocationActivity" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".service.EmergencyCallService" />

        <activity
            android:name=".ui.activity.MonitorDetailActivity"
            android:label="@string/monitor_detail" />

        <service
            android:name=".service.MQTTService"
            android:enabled="true"
            android:exported="false"/>

        <receiver android:name=".receiver.MonitorWarningReceiver"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="org.micronurse.action.SENSOR_WARNING"/>
                <category android:name="org.micronurse"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>