<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.micronurse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        tools:replace="android:supportsRtl"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="MicroNurse.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />
        <meta-data
            android:name="AA_MODELS"
            android:value="org.micronurse.database.model.LoginUserRecord,
                           org.micronurse.database.model.Guardianship" />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value="org.micronurse.database.serializer.BitmapSerializer" />

        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activity.older.OlderMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.ResetPasswordActivity"
            android:label="@string/action_reset_password"
            android:parentActivityName=".ui.activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.micronurse.ui.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="@string/action_new_user"
            android:parentActivityName=".ui.activity.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.micronurse.ui.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.older.SettingsActivity"
            android:label="@string/action_settings" />

        <service android:name=".service.EmergencyCallService" />
        <activity android:name=".ui.activity.older.main.monitor.goingout.SettingHomeLocationActivity"/>
        <activity android:name=".ui.activity.guardian.GuardianMainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.activity.guardian.SettingsActivity"/>
    </application>

</manifest>